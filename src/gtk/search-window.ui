<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="libadwaita" version="1.0" />
  <template class="TerminalSearchWindow" parent="AdwApplicationWindow">
    <property name="modal">False</property>
    <child type="content">
      <object class="GtkWindowHandle" id="window_handle">
        <child>
          <object class="GtkBox" id="outer_box">
            <property name="orientation">vertical</property>
            <property name="spacing">0</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
            <property name="margin-top">6</property>
            <property name="margin-bottom">6</property>
            <!-- Search row -->
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <!-- Search entry container -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="spacing">0</property>
                    <style>
                      <class name="linked" />
                    </style>
                    <child>
                      <object class="GtkSearchEntry" id="search_entry">
                        <property name="hexpand">true</property>
                        <property name="placeholder-text" translatable="yes">Find</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="previous_button">
                        <property name="icon-name">go-up-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Previous result</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="next_button">
                        <property name="icon-name">go-down-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Next result</property>
                      </object>
                    </child>
                  </object>
                </child>
                <!-- Search tools container -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">horizontal</property>
                    <property name="spacing">0</property>
                    <style>
                      <class name="linked" />
                    </style>
                    <child>
                      <object class="GtkToggleButton" id="show_settings_button">
                        <property name="icon-name">view-more-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Show search settings</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkToggleButton" id="fixed_window_button">
                        <property name="icon-name">view-pin-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Pin search window</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkRevealer" id="settings_revealer">
                <property name="reveal-child" bind-source="show_settings_button" bind-property="active" bind-flags="sync-create" />
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <!-- <property name="spacing">6</property> -->
                    <property name="margin-top">6</property>
                    <child>
                      <object class="GtkCheckButton" id="wrap_around_check_button">
                        <property name="label" translatable="yes">Search wraps around</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="match_case_sensitive_check_button">
                        <property name="label" translatable="yes">Match is case sensitive</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="match_whole_words_check_button">
                        <property name="label" translatable="yes">Match entire words only</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkCheckButton" id="match_regex_check_button">
                        <property name="label" translatable="yes">Match using regular expression</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
